<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Grocery.App.Views.BoughtProductsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
    xmlns:vm="clr-namespace:Grocery.App.ViewModels"
    Title="BoughtProductsView"
    x:DataType="vm:BoughtProductsViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Picker
            Title="Klik op onderstaand pijltje om een product te selecteren:"
            Grid.Row="0"
            Grid.Column="0"
            Margin="10,0,0,0"
            BackgroundColor="{StaticResource Primary}"
            ItemsSource="{Binding Products}"
            SelectedIndexChanged="Picker_SelectedIndexChanged"
            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
            TextColor="{StaticResource Secondary}" />
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Padding="5"
            HorizontalOptions="Center"
            Stroke="#C49B33"
            StrokeThickness="4">
            <CollectionView
                Margin="5"
                HorizontalOptions="End"
                ItemsSource="{Binding BoughtProductsList}"
                SelectionMode="Single">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="m:BoughtProducts">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                Text="{Binding Client.EmailAddress}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                HorizontalOptions="End"
                                Text="{Binding GroceryList.Name}"
                                VerticalOptions="Center" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <ContentView>
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="Er zijn geen verkochte producten" />
                    </ContentView>
                </CollectionView.EmptyView>
            </CollectionView>
        </Border>
    </Grid>
</ContentPage>